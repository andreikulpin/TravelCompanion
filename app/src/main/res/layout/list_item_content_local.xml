<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_content_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/list_content_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_content_icon"
        android:textSize="8pt"/>

    <TextView
        android:id="@+id/list_content_text_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_content_icon"
        android:layout_below="@+id/list_content_text_title"
        android:layout_marginBottom="8dp"
        android:textSize="8pt"/>

    <RelativeLayout
        android:id="@+id/list_content_departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_content_text_place"
        android:layout_toRightOf="@+id/list_content_icon">

        <TextView
            android:id="@+id/list_content_text_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/list_content_text_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_content_text_time_start"/>

        <TextView
            android:id="@+id/list_content_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</RelativeLayout>