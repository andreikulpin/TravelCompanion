<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_content_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/list_content_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_content_icon"
        android:layout_marginBottom="8dp"
        android:textSize="8pt"/>

    <RelativeLayout
        android:id="@+id/list_content_departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_content_text_title"
        android:layout_toRightOf="@+id/list_content_icon">

        <TextView
            android:id="@+id/list_content_text_place_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/list_content_text_time_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/list_content_text_date_departure"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/list_content_text_date_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_content_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_content_departure"
        android:layout_toRightOf="@+id/list_content_icon">

        <TextView
            android:id="@+id/list_content_text_place_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/list_content_text_time_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/list_content_text_date_destination"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/list_content_text_date_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>