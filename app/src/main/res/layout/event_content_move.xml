<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <RelativeLayout
        android:id="@+id/content_departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content_text_place_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="place"/>

        <TextView
            android:id="@+id/content_text_time_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/content_text_date_departure"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="time"/>

        <TextView
            android:id="@+id/content_text_date_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="date"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_departure"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content_text_place_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="place"/>

        <TextView
            android:id="@+id/content_text_time_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/content_text_date_destination"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="time"/>

        <TextView
            android:id="@+id/content_text_date_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:padding="16dp"
            android:text="date"/>
    </RelativeLayout>

</RelativeLayout>