<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/content_text_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:padding="16dp"
        android:text="place"/>

    <TextView
        android:id="@+id/content_text_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_text_place"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:padding="16dp"
        android:text="time"/>

    <TextView
        android:id="@+id/content_text_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_text_place"
        android:layout_toRightOf="@+id/content_text_time_start"
        android:textSize="20sp"
        android:padding="16dp"
        android:text="date"/>

    <TextView
        android:id="@+id/content_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_text_place"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:padding="16dp"
        android:text="date"/>

</RelativeLayout>