<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppDefault" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorText">@color/colorText</item>-->
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorTextPopup</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/mainBackground</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColorHint">@color/mainBackground</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>


</resources>
